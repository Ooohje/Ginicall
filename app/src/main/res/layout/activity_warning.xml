<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Warning_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/tip_top_rect"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Warning_bottom"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:scaleType="fitXY"
        android:src="@drawable/warning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Warning_top"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="183dp"
        android:layout_height="58dp"
        android:backgroundTint="#062E11"
        android:backgroundTintMode="src_over"
        android:text="행동 요령 보기"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/Warning_bottom"
        app:layout_constraintEnd_toEndOf="@id/Warning_bottom"
        app:layout_constraintStart_toStartOf="@id/Warning_bottom"
        app:layout_constraintTop_toTopOf="@id/Warning_bottom"
        app:layout_constraintVertical_bias="0.906" />

</androidx.constraintlayout.widget.ConstraintLayout>
